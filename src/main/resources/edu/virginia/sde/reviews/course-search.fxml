<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="470.0" prefWidth="636.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.CourseSearchController">
   <children>
      <VBox layoutX="50.0" layoutY="38.0" prefHeight="391.0" prefWidth="532.0">
         <children>
               <Label text="Search for Course" />
               <TextField fx:id="CourseMnemonic" prefWidth="150.0" promptText="Course (ex: CS)" />
               <Label text="Search for Course Number" />
               <TextField fx:id="CourseNumber" prefWidth="150.0" promptText="Course (ex: 4201)" />
               <Label text="Search for Course Title" />
               <TextField fx:id="CourseTitle" prefWidth="150.0" promptText="Course (ex: Intro to Computer Science)" />
               <Button mnemonicParsing="false" onAction="#handleSearchButton" text="Search" />
                <ListView fx:id="CourseSearchList" prefHeight="222.0" prefWidth="532.0" VBox.vgrow="ALWAYS" />
             </children></VBox>
       <VBox layoutX="496.0" layoutY="22.0" prefHeight="34.0" prefWidth="85.0">
           <children>
               <Button mnemonicParsing="false" onAction="#handleAddButton" prefHeight="26.0" prefWidth="86.0" text="Add Course" />
           </children>
       </VBox>
   </children>

</AnchorPane>
