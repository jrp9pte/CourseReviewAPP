<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="100.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.CourseSearchController">
   <children>
      <VBox layoutX="22.0" layoutY="70.0" prefHeight="720" prefWidth="1280.0">
         <children>
               <Label text="Search for Course" />
               <TextField fx:id="CourseMnemonic" prefWidth="150.0" promptText="Course (ex: CS)" />
               <Label text="Search for Course Number" />
               <TextField fx:id="CourseNumber" prefWidth="150.0" promptText="Course (ex: 4201)" />
               <Label text="Search for Course Title" />
               <TextField fx:id="CourseTitle" prefWidth="150.0" promptText="Course (ex: Intro to Computer Science)" />
               <Button mnemonicParsing="false" onAction="#handleSearchButton" text="Search" />
                <ListView fx:id="CourseSearchList" VBox.vgrow="ALWAYS" />
             </children></VBox>
       <VBox layoutX="1200.0" layoutY="55.0" prefHeight="20" prefWidth="150">
           <children>
               <Button mnemonicParsing="false" onAction="#handleAddButton" text="Add Course" />
           </children>
       </VBox>
   </children>

</AnchorPane>
